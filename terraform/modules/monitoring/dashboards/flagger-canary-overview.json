      "pluginVersion": "9.0.0",
      "targets": [
        { "expr": "max by (name, exported_namespace) (label_replace(flagger_canary_weight{workload!~\".*-primary\"}, \"name\", \"$1\", \"workload\", \"(.*)\") or label_replace(flagger_canary_status * 0, \"name\", \"$1\", \"name\", \"(.*)\"))", "format": "table", "instant": true, "refId": "A" },
        { "expr": "label_replace(max by (destination_workload, destination_workload_namespace, destination_version) (istio_requests_total{destination_workload=~\".*-primary\", reporter=\"destination\"}), \"name\", \"$1\", \"destination_workload\", \"(.*)-primary\")", "format": "table", "instant": true, "refId": "B" }
      ],
      "title": "Canary Deployments",
      "transformations": [
        { "id": "seriesToColumns", "options": { "byField": "name" } },
        { "id": "organize", "options": { "excludeByName": { "Time": true, "Time 1": true, "Time 2": true, "__name__": true, "instance": true, "job": true, "namespace": true, "pod": true, "workload": true, "exported_namespace 2": true, "destination_workload": true, "destination_workload_namespace": true, "Value #B": true }, "renameByName": { "Value #A": "Canary Weight", "exported_namespace": "Namespace", "exported_namespace 1": "Namespace", "name": "Canary", "destination_version": "Version" } } },
        { "id": "calculateField", "options": { "alias": "Primary Weight", "binary": { "left": "100", "operator": "-", "right": "Canary Weight" }, "mode": "binary" } },
        { "id": "organize", "options": { "indexByName": { "Canary": 0, "Namespace": 1, "Version": 2, "Primary Weight": 3, "Canary Weight": 4 } } }
      ],
      "type": "table"
    },
    {
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "axisCenteredZero": false, "axisColorMode": "text", "axisPlacement": "auto", "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2, "pointSize": 5, "showPoints": "auto", "spanNulls": false, "stacking": { "mode": "none" } },
